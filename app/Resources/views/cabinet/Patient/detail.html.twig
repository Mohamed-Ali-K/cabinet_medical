{% extends 'base.html.twig' %}
{% block stylesheet %}
    <link href="{{ asset('templates/css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet">
    <link href="{{ asset('templates/css/font-awesome.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#">
                    <svg class="glyph stroked home">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#stroked-home"></use>
                    </svg>
                </a></li>
            <li class="active">Icons</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><strong>Detail De Patient</strong></h1>
        </div>
    </div>
    <div class="panel panel-success col-md-6">

        <div class="panel-heading">

            <a data-toggle="collapse" href="#collapse1"><h3 class=" text-center ">Ficher Patient de
                    <strong>{{ patient.name }} {{ patient.lastName }}</strong></h3></a></div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body">

                <div class="col-md-6">
                    <h5><strong>Nom de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.name }}</h5>
                </div>
                <div class="col-md-6">
                    <h5><strong>Prenmon de Patient :</strong></h5>
                </div>
                <div class="col-md-6">
                    <h5>{{ patient.lastName }}</h5>
                </div>

                <div class="col-md-6">

                    <h5><strong>Date de naissance de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.birthdate|date('F j, Y') }}</h5>
                </div>
                <div class="col-md-6">
                    <h5><strong>Sexe de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.sexe }}</h5>
                </div>
                <div class="col-md-6">


                    <h5><strong>Matricule de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.matricule }}</h5>
                </div>
                <div class="col-md-6">


                    <h5><strong>Assurance de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.assurance }}</h5>

                </div>
                <div class="col-md-6">

                    <h5><strong>Adresse E-mail de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.addressMail }}</h5>

                </div>
                <div class="col-md-6">

                    <h5><strong>Etat civil de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.etatCiv }}</h5>

                </div>
                <div class="col-md-6">

                    <h5><strong>Fonction de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.fonction }}</h5>

                </div>
                <div class="col-md-6">

                    <h5><strong>Téléphone Portable de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.telPortable }}</h5>

                </div>
                <div class="col-md-6">

                    <h5><strong>Téléphone Fix de Patient :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.telFix }}</h5>


                </div>
                <div class="col-md-6">

                    <h5><strong>Adresse : </strong></h5>
                </div>

                <div class="col-md-6">
                    <h5>{{ patient.adresse }}</h5></div>

                <div class="col-md-6">

                    <h5><strong>Remarque :</strong></h5>
                </div>

                <div class="col-md-6">
                    <h5 {{ patient.remarques }}></h5>

                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-info ">
        <div class="panel-heading"></div>
        <div class="panel-body">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-md">Ajouter
                un constante
            </button>

            <div class="modal fade bs-example-modal-md" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="gridSystemModalLabel">Constante de {{ patient.name }}</h4>
                        </div>

                        <div class="row">
                            <div class="col-md-12">

                                <div class="panel-body">
                                    <form role="form" method="post" action="patient">
                                        <div class="form-group">
                                            <input class="hidden" name="idp" id="idp" placeholder="{{ patient.id }}"
                                                   value="{{ patient.id }}">
                                        </div>


                                        <div class="panel panel-default">
                                            <div class="panel-body">

                                                <div class="form-group ">
                                                    <label>Date de Prise :</label>
                                                    <div class='input-group date' id='datetimepicker1'>
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <input class="form-control"  name="takenDate" id="takenDate" required>
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label>Poid :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-balance-scale"></i></span>
                                                        <input class="form-control" name="poid" id="poid" placeholder="En Kg" required>
                                                        <span class="input-group-addon"><i class="fa fa-balance-scale"></i></span>

                                                    </div>
                                                </div>

                                                <div class="form-group ">
                                                    <label>Taille :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-arrows-v"></i></span>
                                                        <input class="form-control" name="taille" id="taille" placeholder="En Cm" required>
                                                        <span class="input-group-addon"><i class="fa fa-arrows-v"></i></span>
                                                    </div>
                                                </div>

                                                <div class="form-group ">
                                                    <label>Pression systolique (PAS) :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-heart-o"></i></span>
                                                        <input class="form-control" name="pas" id="pas" placeholder="En mmHg" required>
                                                        <span class="input-group-addon"><i class="fa fa-heart-o"></i></span>
                                                    </div>
                                                </div>


                                                <div class="form-group ">
                                                    <label>Pression diastolique (PAD) :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-heart"></i></span>
                                                        <input class="form-control" name="pad" id="pad" placeholder="En mmHg" required>
                                                        <span class="input-group-addon"><i class="fa fa-heart"></i></span>
                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label>Fréquence cardiaque :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-heartbeat"></i></span>
                                                        <input class="form-control" name="pouls" id="pouls" placeholder="En bpm" required>
                                                        <span class="input-group-addon"><i class="fa fa-heartbeat"></i></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label>Temperature corporelle :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-thermometer-quarter"></i></span>
                                                        <input class="form-control" name="temp" id="temp" placeholder="En °C" required>
                                                        <span class="input-group-addon"><i class="fa fa-thermometer-quarter"></i></span>
                                                    </div>
                                                </div>

                                                <div class="form-group ">
                                                    <label>Glycémie :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-tint"></i></span>
                                                        <input class="form-control" name="glycemie" id="glycemie" placeholder="En g/l" required>
                                                        <span class="input-group-addon"><i class="fa fa-tint"></i></span>
                                                    </div>
                                                </div>

                                                <div class="form-group ">
                                                    <label>Cholestérol :</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-eyedropper"></i></span>
                                                        <input class="form-control" name="cholest" id="cholest" placeholder="En mmol/l" required>
                                                        <span class="input-group-addon"><i class="fa fa-eyedropper"></i></span>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <button type="submit" class="btn-lg btn-primary">Ajouter</button>
                                                </div>

                                            </div>


                                        </div>


                                    </form>
                                </div>

                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascript %}
    <script src="{{ asset('templates/js/bootstrap-table.js') }}"></script>
    <script src="{{ asset('templates/js/moment.min.js') }}"></script>
    <script src="{{ asset('templates/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('templates/js/bootstrap-table.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({format: 'YYYY-MM-DD HH:mm:ss'});
        });
    </script>
{% endblock %}