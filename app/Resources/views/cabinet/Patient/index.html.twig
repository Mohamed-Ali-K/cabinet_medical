{% extends 'base.html.twig' %}
{% block stylesheet %}
    <link href="{{ asset('templates/css/bootstrap-table.css') }}" rel="stylesheet">
{% endblock %}
    {% block body %}
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="#">
                        <svg class="glyph stroked home">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#stroked-home"></use>
                        </svg>
                    </a></li>
                <li class="active">Icons</li>
            </ol>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Cabinet de Dr.{{ cabinets.nomDocteur }}</h1>
            </div>
        </div>
        {% for message in app.flashes('notice') %}
            <div class="alert bg-success" role="alert">
                <svg class="glyph stroked checkmark">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#stroked-checkmark"></use>
                </svg>{{ message }}<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
        {% endfor %}
        <div class="panel panel-default ">
            <div class="panel-heading">Liste de Patients</div>
            <div class="panel-body">
                <a href="{{ path('addPatient') }}" class="btn btn-primary btn-lg active" role="button"
                   aria-pressed="true">Ajouter un Patient</a>
                <div class="bootstrap-table clearfix">
                    <div class="table-container clearfix">
                        <div class="table-header clearfix">
                            <table></table>
                        </div>
                        <div class="table-body clearfix">
                            <div class="table-loading" style="top: 37px; display: none;">Loading, please wait…
                            </div>
                            <table data-toggle="table" data-show-refresh="true"
                                   data-show-toggle="true" data-show-columns="true" data-search="true"
                                   data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name"
                                   data-sort-order="desc" class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Gérer le Patient</th>
                                    <th>Patient ID</th>
                                    <th>Nom de Patient</th>
                                    <th>Prenmon de Patient</th>
                                    <th>Date de naissance de Patient</th>
                                    <th>Sexe de Patient</th>
                                    <th>Matricule de Patient</th>
                                    <th>Assurance de Patient</th>
                                    <th>Adresse E-mail de Patient</th>
                                    <th>Etat civil de Patient<</th>
                                    <th>Fonction de Patient</th>
                                    <th>Téléphone Portable de Patient</th>
                                    <th>Téléphone Fix de Patient</th>
                                    <th>Adresse De Patient</th>
                                    <th>Remarque sur le Patient</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for patient in Patients %}
                                    <tr>
                                        <td>
                                            <div class="btn-group dropdown">
                                                <button type="button" class="btn btn-primary">Gére</button>
                                                <button type="button" class="btn btn-default dropdown-toggle"
                                                        data-toggle="dropdown">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a href="/Patient/details/{{ patient.id }}">View </a></li>
                                                    <li><a href="/Patient/edit/{{ patient.id }}">Edit </a>
                                                    </li>
                                                    <li><a href="/Patient/delete/{{ patient.id }}">Delete </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                        <td>{{ patient.id }}</td>
                                        <td>{{ patient.name }}</td>
                                        <td>{{ patient.lastName }}</td>
                                        <td>{{ patient.birthdate|date('F j, Y') }}</td>
                                        <td>{{ patient.sexe }}</td>
                                        <td>{{ patient.matricule }}</td>
                                        <td>{{ patient.assurance }}</td>
                                        <td>{{ patient.addressMail }}</td>
                                        <td>{{ patient.etatCiv }}</td>
                                        <td>{{ patient.fonction }}</td>
                                        <td>{{ patient.telPortable }}</td>
                                        <td>{{ patient.telFix }}</td>
                                        <td>{{ patient.adresse }}</td>
                                        <td>{{ patient.remarques }}</td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block javascript %}
        <script src="{{ asset('templates/js/bootstrap-table.js') }}"></script>
    {% endblock %}